{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_all",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/build/program.out"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task for compiling and linking all C++ files in the src folder."
    },
  ]
}